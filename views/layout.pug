doctype html
head
  title Books
  link(rel='stylesheet', href='stylesheets/style.css' )
h1 Books
p
  a.button(href='new_book.html') Create New Book
table
  thead
    tr
      th Title
      th Author
      th Genre
      th Year
  tbody
    each book in allBooks
        tr
            td
                a(href='book_detail.html')= book.title
            td= book.author
            td= book.genre
            td= book.year